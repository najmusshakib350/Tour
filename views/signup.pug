extends base
block content
  main.main
  .signup-form
    h2.heading-secondary.ma-bt-lg please sign-up page
    form.sign-form
      .form__group
        label.form__label(for='name') Name
        input#sign-name.form__input(type='text', placeholder='Name', required)
        label.form__label(for='email') Email address
        input#sign-email.form__input(type='email', placeholder='you@example.com', required)
      .form__group.ma-bt-md
        label.form__label(for='password') Password
        input#sign-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        label.form__label(for='password') Confirm Password
        input#confirmpassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
      .form__group
        button.btn.btn--green Sign Up